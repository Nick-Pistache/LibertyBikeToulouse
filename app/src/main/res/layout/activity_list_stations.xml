<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListStations">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorNavigationBackground"
        app:itemTextColor="@color/colorNavigationText"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_nav_header">

    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/stations_recycle_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="fr.wildcodeschool.blablawild2.ItineraryListActivity"
            android:scrollbars="vertical"
            tools:listitem="@layout/activity_display_recycle_station">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>





</android.support.v4.widget.DrawerLayout>